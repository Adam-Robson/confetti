{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "module": "nodenext",
    "rootDir": ".",
    "moduleResolution": "nodenext",
    "types": [
      "node",
      "vitest"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "test/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}