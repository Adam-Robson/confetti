{
  "name": "@confetti/server",
  "version": "0.1.0",
  "description": "Server powered by Express.",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "clear": "rm -rf dist",
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "serve": "nodemon --watch 'src/**/*.ts' --exec 'tsx src/index.ts'",
    "lint": "eslint",
    "test": "jest --verbose --runInBand --testLocationInResults --setupFiles dotenv/config --passWithNoTests",
    "test:watch": "npm run test -- --watch",
    "start": "node -r dotenv/config server.js",
    "start:watch": "nodemon -r dotenv/config server.js",
    "setup-db": "node -r dotenv/config setup-db.js"
  },
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "17.2.3",
    "express": "5.1.0",
    "helmet": "8.1.0",
    "pg": "8.16.3"
  },
  "devDependencies": {
    "@types/cors": "2.8.19",
    "@types/express": "5.0.5",
    "@types/node": "24.10.1",
    "@types/pg": "8.15.6",
    "nodemon": "3.1.11"
  }
}
